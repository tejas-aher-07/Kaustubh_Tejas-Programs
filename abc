#include<iostream>
using namespace std;
#include<String.h>
class String1{
	int len;
	char* ptr;
	public:
		String1(){
			this->len=0;
			this->ptr='\0';
		}
		String1(int len, const char* name){
			this->len=len;
			ptr = new char[len+1];
			strcpy(ptr,name);
		}
		void display(){
			cout<<"Length is : "<<len<<endl;
			cout<<"Name is : "<<ptr<<endl;
		}
};

int main(){
	String1 s;
	s.display();
	String1 s1(10,"Kaustubh");
	s1.display();
}
